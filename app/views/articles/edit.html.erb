<h1>Update an article</h1>

<!-- Error checking -->
<% if @article.errors.any? %>
  <p>Please resolve all errors to save your article.</p>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @article, local: true, data: { turbo: false} do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <%= link_to "Cancel edit and return to articles listing", articles_path %>

<% end %>