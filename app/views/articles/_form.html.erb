<%= render "shared/errors", obj: @article %>

<%= form_with model: @article, local: true, data: { turbo: false}, class: "shadow-lg w-2/5 mx-auto border border-solid border-black flex flex-col bg-gray-400 mb-4" do |f| %>

  <fieldset class="mx-auto flex flex-col w-1/2 my-2">
    <%= f.label :title, class:"text-lg"%>
    <%= f.text_field :title, class: "w-full border border-black border-solid m-0 p-1" %>
  </fieldset>

  <fieldset class="mx-auto flex flex-col w-1/2 my-2">
    <%= f.label :description, class:"text-lg"%>
    <%= f.text_area :description, class: "w-full border border-black border-solid m-0 p-0", size: "50x10" %>
  </fieldset>

  <fieldset class="mx-auto flex flex-col w-1/2 my-2">
    <%= f.label :category, class:"text-lg"%>
    <%= f.collection_select :category_ids, Category.order(:name).all, :id, :name, {prompt: "Make your selection from the list below."}, {size: 6, multiple: true, class: "w-full border border-black border-solid m-0 p-0"} %>
  </fieldset>

  <%= f.submit class: "bg-white border-solid border mx-auto w-1/4 align-center border-black my-2"%>
<% end %>