<h2>Login to Alpha Blog</h2>

<%= form_with scope: :session, url: login_path, local: true, data: { turbo: false} do |f| %>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Log In" %>
  </p>

<% end %>

<p>New user? <%= link_to "Sign Up Here", signup_path %></p>