<% @users.each do |user| %>
  <div class="flex flex-col border-2 border-solid shadow-xl mx-auto my-4 w-96 bg-gray-200">
    <div class="flex flex-row m-0">
      <div class="m-2 item-center"><%= gravatar_for user %></div>
      <div class="flex flex-col">
        <h4 class="font-bold"><%= user.username %></h4>
        <address><%= user.email %></address>
        <p class="text-blue-800 underline"><%= link_to "View Profile", user_path(user) %></p>
        <p><%= pluralize(user.articles.count, "article") %></p>
      </div>
      <% if logged_in? && current_user.admin? %>
        <div class="flex-row ml-auto mr-2">
          <%= link_to "Edit", edit_user_path(user), class:"text-blue-800 underline" %>
          <%= link_to "Delete", user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure? This will also delete all associated articles." }, class:"text-red-800 underline" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>