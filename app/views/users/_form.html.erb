<%= render "shared/errors", obj: @user %>

<%= form_with model: @user, local: true, data: { turbo: false}, class: "shadow-lg w-2/5 mx-auto border border-solid border-black flex flex-col bg-gray-400 mb-4" do |f| %>

  <fieldset class="mx-auto flex flex-col w-1/2 my-2">
    <%= f.label :username, class:"text-lg"%>
    <%= f.text_field :username %>
  </fieldset>

  <fieldset class="mx-auto flex flex-col w-1/2 my-2">
    <%= f.label :email, class:"text-lg"%>
    <%= f.email_field :email %>
  </fieldset>

  <fieldset class="mx-auto flex flex-col w-1/2 my-2">
    <%= f.label :password, class:"text-lg"%>
    <%= f.password_field :password %>
  </fieldset>

  <%= f.submit class: "bg-white border-solid border mx-auto w-1/4 align-center border-black my-2"%>

<% end %>